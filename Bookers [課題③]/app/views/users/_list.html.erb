<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2 style="margin: 20px 0 10px 0;">User info</h2>
			<div class="user-image">
				<%= attachment_image_tag @user,:profile_image, :fill, 100, 100, format: 'jpg', class: "img-square pull-left profile-img", fallback:"sample1.jpg" %>
				<!-- < image_tag('sample1.jpg', class:"img-square pull-left profile-img", style: "width: 100px; height: 100px; margin-top: 20px;") %> -->
			</div>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<div class="col-xs-12" style="text-align: center; padding: 5px;">
					<% if current_user.id == @user.id %>
						<botton class="btn btn-default visible-lg-block"><%= link_to "", edit_user_path(@user.id), class: "glyphicon glyphicon-wrench" %></botton>
					<% end %>
				</div>
			</div>

			<h2>New book</h2>
			<%= form_for(book, url:books_path) do |f| %>

				<% if book.errors.any? %>
				<p>error</p>
				  <div id="error_explanation" class="alert_error">
				    <ul>
			      <% book.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
				    </ul>
				  </div>
				<% end %>

					<div class="field">
						<p>
							<%= f.label :title %>
							<%= f.text_field :title %>
						</p>
					</div>

					<div class="field">
						<p>
							<%= f.label :body %>
							<%= f.text_area :body %>
						</p>
					</div>

					<p>
					<%= f.submit "Create Book" %>
					</p>
			<% end %>
		</div>