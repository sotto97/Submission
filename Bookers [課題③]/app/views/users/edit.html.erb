<h2>User info</h2>
<%= form_for(@user, url: "/users/#{@user.id}") do |f| %>

	<% if flash[:notice] %>
		<p class="notice">
			<%= flash[:notice] %>
		</p>
	<% end %>

	<div class="field">
		<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
		</p>
	</div>

	<div class="field">
		<%= f.label :Image %>
		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "" %>
		<%= f.attachment_field :profile_image, placeholder: "", class: "user-edit-form" %>
	</div>

	<div class="field">
		<p>
		<%= f.label :introduction %><br>
		<%= f.text_area :introduction %>
		</p>
	</div>

	<div class="field">
		<p>
		<%= f.submit 'Update User' %>
		</p>
	</div>

<% end %>